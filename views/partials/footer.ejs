<footer class="site-footer">
  <div class="container footer-grid">
    
    <!-- Brand Section -->
    <div class="footer-brand">
      <a href="/" class="brand">
        <img src="/assets/logo.png" alt="BuildSource Logo" class="footer-logo" />
      </a>
      <div>
        <h3>BuildSource</h3>
        <p class="muted">Reliable. Transparent. Local.</p>
      </div>
    </div>

    <!-- Footer Navigation -->
    <nav class="footer-nav">
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/services">Services</a>
      <a href="/hire">Hire Professionals</a>
      <a href="/projects">Projects</a>
      <a href="/materials">Materials</a>
      <a href="/predict">Cost Predict</a>
      <% if (locals.user && locals.user.role === 'admin') { %>
        <a href="/pricing">Pricing</a>
        <a href="/admin/quotes">Quotes</a>
      <% } %>
      <a href="/contact">Contact</a>
    </nav>

    <!-- Newsletter -->
    <div class="footer-newsletter">
      <h4>Stay Updated</h4>
      <p>Subscribe to our newsletter for the latest updates.</p>
      <form class="newsletter-form">
        <input type="email" placeholder="Enter your email" required>
        <button type="submit" class="btn">Subscribe</button>
      </form>
    </div>

    <!-- Social Media -->
    <div class="footer-social">
      <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
      <a href="#"><i class="fa-brands fa-instagram"></i></a>
      <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
      <a href="#"><i class="fa-brands fa-twitter"></i></a>
    </div>

    <!-- Optional User Controls -->
    <div class="footer-user">
      <% if (!locals.user) { %>
        <a href="/signin" class="btn-outline small">Sign In</a>
      <% } else { %>
        <span>Welcome, <%= locals.user.name %> (<%= locals.user.role %>)</span>
        <a href="/logout" class="btn-outline small">Logout</a>
      <% } %>
    </div>

  </div>

  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <p>© <%= new Date().getFullYear() %> BuildSource — All Rights Reserved.</p>
  </div>
</footer>

<script src="/js/fontawesome.min.js"></script>
<script src="/js/main.js"></script>
</body>
</html>
