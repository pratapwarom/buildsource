<%- include('partials/head', { title: 'Create Account' }) %>
<%- include('partials/header') %>

<section class="container signup-section">
  <div class="signup-form-wrapper">
    <h1>Create Account</h1>
    <p class="muted">Join BuildSource to access exclusive features</p>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="error-message"><%= error %></div>
    <% } %>

    <% if (typeof success !== 'undefined' && success) { %>
      <div class="success-message"><%= success %></div>
    <% } %>

    <form action="/signup" method="POST" class="signup-form">
      <div class="form-group">
        <label for="name">Full Name</label>
        <input type="text" id="name" name="name" required placeholder="Enter your full name">
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required placeholder="Enter your email">
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required placeholder="Create a password" minlength="6">
      </div>

      <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required placeholder="Confirm your password">
      </div>

      <div class="form-group">
        <label for="role">Role</label>
        <select id="role" name="role" required>
          <option value="">Select your role</option>
          <option value="user">User</option>
          <option value="admin">Admin</option>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Create Account</button>
    </form>

    <p class="signup-footer">Already have an account? <a href="/signin">Sign In</a></p>
  </div>
</section>

<%- include('partials/footer') %>

<style>
.signup-section {
  padding: var(--spacing-2xl) var(--spacing-xl);
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 70vh;
}

.signup-form-wrapper {
  background: var(--card);
  padding: var(--spacing-2xl);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow);
  border: 1px solid var(--border);
  max-width: 450px;
  width: 100%;
  text-align: center;
}

.signup-form-wrapper h1 {
  margin-bottom: var(--spacing-sm);
  color: var(--text-primary);
}

.signup-form-wrapper .muted {
  margin-bottom: var(--spacing-xl);
  color: var(--text-secondary);
}

.signup-form {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
}

.form-group {
  text-align: left;
}

.form-group label {
  display: block;
  margin-bottom: var(--spacing-sm);
  font-weight: 600;
  color: var(--text-primary);
}

.form-group input,
.form-group select {
  width: 100%;
  padding: var(--spacing-md);
  border: 1px solid var(--border);
  border-radius: var(--radius-sm);
  background: var(--bg);
  color: var(--text-primary);
  font-size: 1rem;
  transition: var(--transition);
}

.form-group input:focus,
.form-group select:focus {
  outline: none;
  border-color: var(--brand);
  box-shadow: 0 0 0 2px rgba(0, 85, 165, 0.1);
}

.btn-primary {
  background: var(--brand);
  color: white;
  padding: var(--spacing-md) var(--spacing-lg);
  border: none;
  border-radius: var(--radius-sm);
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition);
  width: 100%;
}

.btn-primary:hover {
  background: var(--brand-hover);
  transform: translateY(-2px);
}

.error-message {
  background: #fee2e2;
  color: #dc2626;
  padding: var(--spacing-md);
  border-radius: var(--radius-sm);
  margin-bottom: var(--spacing-lg);
  border: 1px solid #fecaca;
}

.success-message {
  background: #dcfce7;
  color: #166534;
  padding: var(--spacing-md);
  border-radius: var(--radius-sm);
  margin-bottom: var(--spacing-lg);
  border: 1px solid #bbf7d0;
}

.signup-footer {
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.signup-footer a {
  color: var(--brand);
  text-decoration: none;
  font-weight: 500;
}

.signup-footer a:hover {
  text-decoration: underline;
}

/* Dark mode */
.dark .signup-form-wrapper {
  background: var(--card);
  border-color: var(--border);
}

.dark .form-group input,
.dark .form-group select {
  background: var(--bg);
  color: var(--text-primary);
  border-color: var(--border);
}

.dark .error-message {
  background: #451a1a;
  color: #fca5a5;
  border-color: #7f1d1d;
}

.dark .success-message {
  background: #14532d;
  color: #bbf7d0;
  border-color: #166534;
}
</style>
